<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/public_divider_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvHome"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:src="@drawable/baoji_home_selector" />

        <ImageView
            android:id="@+id/tvRecommend"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:src="@drawable/baoji_recommend_selector" />

        <ImageView
            android:id="@+id/tvUserCenter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:src="@drawable/baoji_usercenter_selector" />

    </LinearLayout>
</LinearLayout>
